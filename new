    <script>
        let shareCount = 0;
        const progressBar = document.getElementById('progress');
        const shareCountText = document.getElementById('share-count');
        const shareButton = document.getElementById('share-button');
        const verifyButton = document.getElementById('verify-button');
        const ribbonContainer = document.getElementById('ribbon-container');

        shareButton.addEventListener('click', () => {
            if (shareCount < 5) {
                shareCount++;
                updateProgress();
                
                // Simulate sharing (in a real scenario, you'd integrate with the WhatsApp API)
                const shareUrl = encodeURIComponent(window.location.href);
                const whatsappUrl = `https://api.whatsapp.com/send?text=Check%20out%20this%20amazing%20iPhone%2015%20Pro%20Max%20giveaway!%20${shareUrl}`;
                window.open(whatsappUrl, '_blank');

                if (shareCount === 5) {
                    shareButton.style.display = 'none';
                    verifyButton.style.display = 'inline-block';
                    startRibbonRain();
                }
            }
        });

        verifyButton.addEventListener('click', () => {
            // Simulate verification process
            alert('Verifying your participation...');
            setTimeout(() => {
                alert('Verification successful! You are now entered into the draw.');
                window.location.href = 'https://example.com/iphone15-promo/confirmation?shares=5&verified=true';
            }, 2000);
        });

        function updateProgress() {
            const progress = (shareCount / 5) * 100;
            progressBar.style.width = `${progress}%`;
            shareCountText.textContent = `Shares: ${shareCount}/5`;
        }

        function startRibbonRain() {
            const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'];
            const ribbonCount = 50;

            for (let i = 0; i < ribbonCount; i++) {
                setTimeout(() => {
                    const ribbon = document.createElement('div');
                    ribbon.classList.add('ribbon');
                    ribbon.style.left = `${Math.random() * 100}%`;
                    ribbon.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    ribbon.style.animationDelay = `${Math.random() * 2}s`;
                    ribbonContainer.appendChild(ribbon);

                    // Remove the ribbon after animation ends
                    ribbon.addEventListener('animationend', () => {
                        ribbon.remove();
                    });
                }, i * 100);
            }
        }
    </script>
